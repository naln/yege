.nav-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.header-content {
  position: relative;
  height: 60px;
  display: flex;
  align-items: center;
}

.back-btn {
  position: absolute;
  left: 40rpx;
  width: 60rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn image {
  width: 32rpx;
  height: 46rpx;
}

.title-wrap {
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 30rpx;
  color: #fff;
  font-weight: 500;
}

.subtitle {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 4rpx;
} 