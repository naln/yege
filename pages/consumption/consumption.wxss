.container {
  padding: 0;
  min-height: 100vh;
  background: #1D2027;
}

.consumption-content {
  padding: 40rpx;
  padding-top: calc(44px + env(safe-area-inset-top) + 80rpx);
}

/* Tab样式 */
.card-type-tabs {
  margin: 0 -40rpx;
}

.weui-navbar {
  display: flex;
  position: relative;
  height: 80rpx;
  width: calc(100vw + 10rpx);
}

.tab-item {
  background: rgba(255, 255, 255, 0.1);
  margin-right: 10rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  background: var(--primary-color);
  color: #000;
}

/* 记录列表样式 */
.record-list {
  padding: 40rpx 0;
}

.record-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.record-info {
  display: flex;
  margin-bottom: 16rpx;
}

.record-info:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
  width: 140rpx;
}

.value {
  font-size: 24rpx;
  color: #333;
  flex: 1;
}

/* 无数据提示 */
.no-data {
  text-align: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  margin-top: 100rpx;
} 