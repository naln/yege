<view class="container theme">
  <nav-header title="门控开关" subtitle="Door control switches"/>

  <view class="door-content">
    <!-- 开关控制面板 -->
    <view class="control-panel">
      <!-- 上按钮组 -->
      <view class="control-group">
        <view class="control-btn up">
          <image src="/images/door/up.png" mode="aspectFit"/>
        </view>
        <view class="btn-text">
          <text>开门</text>
        </view>
      </view>
      <!-- 下按钮组 -->
      <view class="control-group">
        <view class="control-btn down">
          <image src="/images/door/down.png" mode="aspectFit"/>
        </view>
        <view class="btn-text">
          <text>关门</text>
        </view>
      </view>
      <!-- 停止按钮组 -->
      <view class="control-group">
        <view class="control-btn stop">
          <image src="/images/door/stop.png" mode="aspectFit"/>
        </view>
        <view class="btn-text">
          <text>结算</text>
        </view>
      </view>
    </view>

    <!-- 提示文本 -->
    <view class="tip-text">订单进行中可使用此功能 本页面如无门上下控制键一样</view>
  </view>
</view> 