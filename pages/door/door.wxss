.container {
  padding: 0;
  min-height: 100vh;
  background: #1D2027;
}

.door-content {
  padding: 40rpx;
  padding-top: calc(44px + env(safe-area-inset-top) + 100rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 控制面板 */
.control-panel {
  width: 400rpx;
  height: 700rpx;
  background: #FFB800;
  border-radius: 40rpx;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
}

/* 按钮组样式 */
.control-group {
  display: flex;
  align-items: center;
  gap: 40rpx;
  width: 100%;
  justify-content: center;
  transform: translateX(80rpx);
}

.control-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #000;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.control-btn.down {
  background: #000;
}

.control-btn.stop {
  background: #FF4D4F;
}

.control-btn image {
  width: 80rpx;
  height: 80rpx;
}

/* 文字容器 */
.btn-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 160rpx;
}

.btn-text text {
  font-size: 32rpx;
  color: #000;
  font-weight: 500;
}


/* 提示文本 */
.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
  margin-top: 40rpx;
  line-height: 1.6;
} 