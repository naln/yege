.container {
  padding: 0;
  min-height: 100vh;
  background: #1D2027;
}

.feedback-content {
  padding: 40rpx;
  padding-top: calc(44px + env(safe-area-inset-top) + 100rpx);
  box-sizing: border-box;
}

.input-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 24rpx;
  color: #fff;
  margin-bottom: 16rpx;
}

.required {
  color: #FF4D4F;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 0 24rpx;
  color: #333;
  font-size: 24rpx;
  box-sizing: border-box;
}

.input[disabled] {
  color: rgba(0, 0, 0, 0.3);
}

.feedback-options {
  margin-bottom: 40rpx;
}

.radio-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
}

/* 修改radio样式 */
.radio-item radio {
  margin-right: 12rpx;
  transform: scale(0.7);
}

.textarea {
  width: 100%;
  height: 180rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  color: #333;
  font-size: 24rpx;
  box-sizing: border-box;
}

.submit-btn {
  margin-top: 60rpx;
  width: 100%;
  height: 80rpx;
  background: var(--primary-color);
  border-radius: 40rpx;
  color: #000;
  font-size: 28rpx;
  line-height: 80rpx;
  border: none;
  box-sizing: border-box;
} 