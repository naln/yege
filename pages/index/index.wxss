.container {
  min-height: 100vh;
  background-color: rgba(40, 42, 48, 1);
  padding: 48rpx;
  padding-top: calc(128rpx + env(safe-area-inset-top));
  padding-bottom: calc(48rpx + 100rpx);
}

/* 用户信息样式 */
.user-info {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  padding: 0;
  color: white;
}
.username-wrap{
  display: flex;
flex-direction: column;
align-items: flex-end;
margin-right: 20rpx;
}
.username{
  font-size: 42rpx;
font-weight: 400;
letter-spacing: 0;
line-height: 52.5rpx;
color: rgba(255, 255, 255, 1);
text-align: left;
vertical-align: top;
}
.welcome{
  font-size: 24rpx;
font-weight: 300;
letter-spacing: 0;
line-height: 48rpx;
color: rgba(150, 249, 22, 1);
text-align: left;
vertical-align: top;
}
.avatar {
  width: 144.93rpx;
  height: 144.93rpx;
display: block;
}

/* 公告样式 */
.notice {
height: 50.72rpx;
border-radius: 36.23rpx;
background: rgba(255, 255, 255, 1);
margin-top: 20rpx;
}

.notice-item {
font-size: 18.12rpx;
font-weight: 400;
letter-spacing: 0rpx;
line-height: 50.72rpx;
color: rgba(56, 56, 56, 1);
display: flex ;
align-items: center;
}

.notice-icon {
  width: 27rpx;
  height: 27rpx;
  margin-right: 10rpx;
  margin-left: 16rpx;
}
.notice-content{
  margin-left: auto;
  margin-right: 20px;
}
.card-wrap{
  margin-top: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0;
  color: white;
}
.ddyjs{
  display: flex;
align-items: center;
justify-content: center;
width: 127.37rpx;
height: 310.78rpx;
writing-mode: vertical-rl; 
text-orientation: upright; 
border-radius: 35.42rpx;
background: rgba(239, 241, 243, 1);
}
.nz{
  width: 54.35rpx;
height: 54.35rpx;
margin-bottom: 20rpx;
margin-top: 20rpx;
}
.ddyjs-text{
  font-size: 28.99rpx;
font-weight: 400;
letter-spacing: 12rpx;
color: rgba(0, 0, 0, 1);
}
/* 卡包样式 */
.card-pack {
  position: relative;
  width: 485.51rpx;
height: 311.6rpx;
  border-radius: 30rpx;
  margin: 20rpx 0;
  overflow: hidden;
}

.card-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 485.51rpx;
height: 311.6rpx;
  z-index: 0;
}

.card-content {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: flex-start;
  flex-direction: column;
  padding-left: 42rpx;
  padding-top:64rpx;
}
.card-text{
  
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.card-title {
  font-size: 41.67rpx;
font-weight: 400;
letter-spacing: 0rpx;
color: rgba(0, 0, 0, 1);
}

.card-subtitle {
  font-size: 19.73rpx;
font-weight: 400;
letter-spacing: 0rpx;
color: rgba(0, 0, 0, 1);
}
.card-desc{
  font-size: 20.21rpx;
  font-weight: 400;
  letter-spacing: 0rpx;
  color: rgba(0, 0, 0, 1);
}
.recharge-btn {
  width: 268.12rpx;
  border:none;
height: 57.97rpx;
margin-left:0;
margin-top:36rpx;
border-radius: 23.46rpx;
background: rgba(239, 241, 243, 1);
justify-content: flex-start;
align-items: flex-start;
font-size: 28.99rpx;
font-weight: 400;
letter-spacing: 0rpx;
line-height: 58rpx;
color: rgba(56, 56, 56, 1);
}

/* 功能区样式 */
.function-area {
  display: flex;
  margin: 20rpx 0;
  justify-content: space-between;
}

.function-item {
  background: transparent;
  border-radius: 10px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.image-wrapper {
  border: none;
  width: 127.38rpx;
height: 127.27rpx;
  background: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.function-item image {
  width: 67.23rpx;
  height: 67.23rpx;
}

.function-item text {
  font-size: 21.23rpx;
font-weight: 500;
letter-spacing: 0rpx;
color: rgba(255, 255, 255, 1);
margin-top: 4rpx;
}

/* 团购券入口样式 */
.group-buy {
  width: 663.04rpx;
height: 99.64rpx;
border-radius: 53.08rpx;
background: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}
.group-buy-text{
  margin-left: 30rpx;
  font-size: 36.23rpx;
  font-weight: 400;
  letter-spacing: 3.54rpx;
  line-height: 49.71rpx;
  color: rgba(0, 0, 0, 1);
}

.group-buy image {
  width: 74rpx;
  height: 74rpx;
  margin: 0 10rpx;
  border-radius: 20rpx;
} 