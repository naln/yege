.container {
  min-height: 100vh;
  background: #1D2027;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 48rpx;
}

.logo-area {
  width: 544rpx;
  height: 360rpx;
  margin-top: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.logo {
  width: 100%;
}

.slogan {
  font-size: 66rpx;
  color: #fff;
  font-weight: 300;
}

.button-area {
  width: 100%;
  margin-top: 400rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--primary-color);
  border-radius: 44rpx;
  color: #000;
  font-size: 32rpx;
  font-weight: 400;
  border: none;
}

.cancel-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  border-radius: 44rpx;
  color: #000;
  font-size: 32rpx;
  font-weight: 400;
  border: none;
}

.agreement {
  position: fixed;
  bottom: 80rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.link {
  color: #fff;
} 