.container {
  padding: 0;
  position: relative;
  min-height: 100vh;
  background: #1D2027;
}

.header-bg {
  width: 100vw;
  display: block;
}

.store-list {
  padding: 24rpx;
  margin-top: -160rpx;
  padding-bottom: calc(146rpx + env(safe-area-inset-bottom));
}

.store-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.store-header {
  margin-bottom: 16rpx;
}

.store-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.distance {
  font-size: 24rpx;
  color: #666;
}

.store-notice {
  display: flex;
  align-items: center;
  background: #F5F5F5;
  border-radius: 30rpx;
  padding: 4rpx 16rpx;
  color: #333;
  font-size: 24rpx;
}

.notice-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.store-info {
  display: flex;
  gap: 16rpx;
}

.store-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.status-row {
  display: flex;
  gap: 16rpx;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
  color: #333;
  font-size: 22rpx;
}

.status-item image {
  width: 28rpx;
  height: 28rpx;
}

.using {
  color: var(--primary-color);
}

.maintain {
  color: #FF6B6B;
}

.business-hours, .price, .remark {
  color: #999;
  font-size: 20rpx;
  line-height: 1.1;
}

.action-buttons {
  display: flex;
  gap: 12rpx;
  margin-top: 8rpx;
}

.action-btn {
  flex: 1;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  border-radius: 22rpx;
  font-size: 22rpx;
  border: none;
  padding: 0;
  line-height: 1;
}

.action-btn image {
  width: 22rpx;
  height: 22rpx;
}

.contact {
  background: var(--primary-color);
  color: #000;
}

.navigate {
  background: var(--primary-color);
  color: #000;
}

.refresh-btn {
  position: absolute;
  top: 128rpx;
  left: 24rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(40, 42, 48, 0.95);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.refresh-btn image {
  width: 40rpx;
  height: 40rpx;
}

.map-mode-btn {
  position: absolute;
  top: 128rpx;
  right: 24rpx;
  background: rgba(40, 42, 48, 0.95);
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
} 