.container {
  padding: 0;
  min-height: 100vh;
  background: #1D2027;
}

.verify-content {
  padding: 40rpx;
  padding-top: calc(44px + env(safe-area-inset-top) + 100rpx);
}

.title {
  display: none;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.platform-tabs {
  width:100vw;
  margin-left: -40rpx;
  display: flex;
  justify-content: space-between;
  gap: 2rpx;
  background: rgba(255, 255, 255,0.2);
}

.platform-item {
  flex: 1;
  height: 100rpx;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s;
}

.platform-item.active {
  background: var(--primary-color);
}

.platform-item image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
}

.platform-item text {
  font-size: 28rpx;
  color: #fff;
}

.platform-item.active text {
  color: #000;
}

.platform-item:first-child.active {
  border-top-right-radius: 40rpx;
}

.platform-item:last-child.active {
  border-top-left-radius: 40rpx;
}

.input-section {
  padding: 40rpx 0;
  background: var(--primary-color);
  width: 100vw;
  margin-left: -40rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-label {
  display: block;
  font-size: 36rpx;
  color: rgba(8, 8, 8, 0.8);
  margin-bottom: 20rpx;
  text-align: center;
  letter-spacing: 16rpx;
}

.input-group {
  width: calc(100% - 40rpx);
  position: relative;
  max-width: 600rpx;
}

.verify-input {
  height: 100rpx;
  background: #fff;
  padding: 0 88rpx 0 40rpx;
  color: #333;
  font-size: 28rpx;
}

.scan-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
}

.scan-btn image {
  width: 60rpx;
  height: 60rpx;
}

.scan-btn text {
  display: none;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
  margin-bottom: 10rpx;
}

.confirm-btn {
  margin-top: 60rpx;
  width: 100%;
  height: 88rpx;
  background: var(--primary-color);
  border-radius: 44rpx;
  color: #000;
  font-size: 32rpx;
  line-height: 88rpx;
  border: none;
}

.input-tip {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
  margin-top: 20rpx;
  text-align: center;
} 